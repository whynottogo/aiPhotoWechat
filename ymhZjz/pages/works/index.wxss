.works {
  margin-top: 2vh;
}

.container {
  height: 145px;
  border-radius: 13px;
  background-color: #fff;
  margin: 0 0.9em;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0.7em;
  margin-bottom: 10px;
  box-shadow: 1px 1px 1px 1px rgba(173, 169, 169, 0.2);
}

.container-hover {
  background-color: rgb(226, 225, 225);
}

.left {
  width: 80%;
  height: 100%;
  display: flex;
}

.photo {
  width: 35%;
  height: 100%;
}

.photo image {
  border-radius: 0.4em;
  border: 1px;
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.right {
  width: 25%;
  height: 100%;
  font-size: 16px;
  color: rgb(192, 190, 190);
}


.msg {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.msg view:first-child {
  margin-left: 10px;
  font-size: 1.2em;
  color: #2c2c2c;
  /* margin-bottom: 10px; */
  /* font-weight: 500; */
}

.msg view:nth-child(2) {
  margin-left: 10px;
  margin-top:4em;
  font-size: 14px;
  color: rgb(192, 190, 190);
  /* margin-bottom: 10px; */
}

.msg view:last-child {
  margin-left: 10px;
  font-size: 14px;
  color: rgb(192, 190, 190);

}

.none {
  width: 300px;
  height: 300px;
  margin: 0 auto
}


.btn-font {
  color: #4aa4c3;
  font-size: 16px;
  position: relative;
  top: -2px;
}
