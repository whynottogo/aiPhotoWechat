.page {
  height: 100vh;
  width: 100vw;
  padding: 3vh 4vw 0 4vw;
}

.pic {
  width: 92%;
  object-fit: cover;
}

.tips {
  width: 92vw;
  font-size: 2em;
  text-align: center;
  margin-top: 1em;
}

.actioins {
  position: fixed;
  bottom: 5vh;
  width: 92vw;
  display: flex;
  justify-content:space-between
}
.buttons {
  display: inline-block;
  width: 44vw;
  text-align: center;
  height: 3em;
  border-radius: 6px;
}
.buttons:after{
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.return {
  background-color: rgb(229, 231, 231);
}
.download {
  background-color: black;
  color: white;
}