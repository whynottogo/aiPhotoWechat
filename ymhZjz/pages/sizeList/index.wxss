.top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 8vh;
  background-color: #fff;
  font-size: 16px;
  z-index: 10;
}

.container {
  margin-top: 8vh;
  height: 92vh;
  background-color: #fff;
}

.list {
  display: flex;
  height: 10vh;
  background-color: #2c2c2c;
  margin: 0 20px 20px 20px;
  border-radius: 15px;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}

.list image {
  margin-right: 20px;
  border-radius: 50%;
}

.list view {
  margin-left: 10px;
}

.title {
  font-size: 18px;
  margin-bottom: 10px;
  font-weight: 500;
}

.description {
  font-size: 14px;
}

.none {
  width: 300px;
  height: 300px;
  margin: 0 auto;
}

.scroll-to-top {
  position: fixed;
  bottom: 60px;
  right: 30px;
  width: 50px;
  height: 50px;
  background-color: #4a95e0;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
}
